{% layout 'layout.liquid' %}
{% block content %}
<div class="container-md">
    <article>
       
        <h3>Recipes: {{ boba.amount }}</h3>
        <h6>description: {{ boba.body }}</h6>
        {% if boba.owner == userId %}
        <div class="btn-group">

            <a href="/examples/{{ boba.id }}/edit" class="btn btn-primary">Edit</a>
            <form action="/examples/{{ boba.id }}?_method=DELETE" method="POST">
                <input type="submit" value="Delete" class="btn btn-danger">
            </form>
        </div>
        {% endif %}
    </article>
</div>
{% endblock %}